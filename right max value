import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int[] arr=new int[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
        }
        int temp=Integer.MIN_VALUE;
        for(int i=n/2;i<n;i++){
          if(arr[i] > temp)
          temp=arr[i];
        }
        System.out.println(temp);
    }
}
